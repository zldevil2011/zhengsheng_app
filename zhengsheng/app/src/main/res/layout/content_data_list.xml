<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.newly_dawn.app.zhengsheng.data.data_list"
    tools:showIn="@layout/activity_data_list">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/border_gray_bottom_dotted"
            android:text="电压有效值"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/detail_chart1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/border_gray_bottom_dotted"
            android:text="电流有效值"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/detail_chart2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/border_gray_bottom_dotted"
            android:text="功率因数"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/detail_chart3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/border_gray_bottom_dotted"
            android:text="有功功率"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/detail_chart4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/border_gray_bottom_dotted"
            android:text="无功功率"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/detail_chart5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>